<table class="table table-striped">
	<thead>
		<tr>
			<th>№</th>
			<th>Имя</th>
			<th>Телефон</th>
			<th>Дата визита</th>
			<th>Мастер</th>
			<th>Цвет</th>
		</tr>
	</thead>
	<tbody>
		<tr <% @results.each do |row| %>>
			<td><%= row['id'] %></td>
			<td><%= row['username'] %></td>
			<td><%= row['phone'] %></td>
			<td><%= row['datestamp'] %></td>
			<td><%= row['barber'] %></td>
			<td style="background-color: <%= row['color'] %>"><%= row['color'] %></td>
		</tr <% end %> >
	</tbody>



</table>