<h2>Sign up</h2>
<p>On a this is page you want sign up in Barber Shop</p>

<script type="text/javascript">

$(function() {

  // тут я могу написать любой javascript код, который исполнится
  // после загрузки страницы

  $('#color').simplecolorpicker();
  $('#datetimepicker').datetimepicker();
  
});

</script>

<form action="/visit" method="POST" role="form">

  <label>Select your barber</label>
  <div class="form-group">
  <select name="barber" type="text" class="form-control">
    <option <%= @barber == 'Gus Fring' ? 'selected' : '' %>><%= @bb[0].join %></option>
    <option <%= @barber == 'Jessie Pinkman' ? 'selected' : '' %>><%= @bb[1].join %></option>
    <option <%= @barber == 'Walter White' ? 'selected' : '' %>><%= @bb[2].join %></option>
  </select>
  </div>

  <div class="form-group">
    <label>Your name</label>
    <input name="username" type="text" class="form-control" placeholder="Your name" value="<%= @username %>">
  </div>

  <div class="form-group">
    <label>Your phone</label>
    <input name="phone" type="text" class="form-control" placeholder="Your Phone" value="<%= @phone %>">
  </div>

  <div class="form-group">
    <label>When are you come?</label>
    <input id="datetimepicker" name="datetime" type="text" class="form-control" placeholder="Date and time" value="<%= @datetime %>" autocomplete="off">
  </div>

  
  <div class="form-group">
    <label>В какие цвета хотите себя окрасить: </label>
    <select id="color" name="color">
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
    </select>
  </div>

  <button type="submit" class="btn btn-primary">Sign up</button>

</form>
